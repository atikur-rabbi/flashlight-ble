<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.ble.flashlight" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <preference name="phonegap-version" value="cli-7.0.0" />
    <name>Flashlight</name>
    <description>
        A sample Apache Cordova application with Bluetooth LE peripheral that controls the camera flash.
    </description>
    <author href="https://github.com/don">
        Don Coleman
    </author>
    <content src="index.html" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" />

    <gap:plugin name="cordova-plugin-ble-peripheral" source="npm" />
    <gap:plugin name="cordova-plugin-flashlight" source="npm" />
    <gap:plugin name="cordova-custom-config" source="npm" />
</widget>
